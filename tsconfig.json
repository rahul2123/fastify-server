{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2015",
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "bin",
    "strict": true,
    "paths": {
      "*": ["src/*"]
    },
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./", 
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "resolveJsonModule":true,
   }
}
